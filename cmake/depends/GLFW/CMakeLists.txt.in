cmake_minimum_required(VERSION 2.8.2)

project(GLFW-download NONE)

include(ExternalProject)

ExternalProject_Add(
    GLFW

    GIT_REPOSITORY    "https://github.com/glfw/glfw.git"
    GIT_TAG           "3.2.1"
    
    GIT_SHALLOW       1

    SOURCE_DIR        "${GLFW_SRC_DIR}"
    BINARY_DIR        "${GLFW_BUILD_DIR}"

    CONFIGURE_COMMAND ""
    BUILD_COMMAND     ""
    INSTALL_COMMAND   ""
    TEST_COMMAND      ""

    LOG_DOWNLOAD      1
    LOG_UPDATE        1
)
